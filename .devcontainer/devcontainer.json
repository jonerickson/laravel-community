// https://aka.ms/devcontainer.json
{
    "name": "Laravel Community",
    "dockerComposeFile": ["../compose.yaml"],
    "service": "laravel-community",
    "workspaceFolder": "/var/www/html",
    "customizations": {
        "vscode": {
            "extensions": [
                "mikestead.dotenv",
                "amiralizadeh9480.laravel-extra-intellisense",
                "ryannaddy.laravel-artisan",
                "onecentlin.laravel-blade",
                "onecentlin.laravel5-snippets"
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    },
    "forwardPorts": ["laravel-community:8080", "mysql:3306", "redis:6379"],
    "portsAttributes": {
        "8080": {
            "label": "Web Server"
        },
        "3306": {
            "label": "MySQL"
        },
        "6379": {
            "label": "Redis"
        }
    },
    "remoteUser": "root",
    "containerUser": "www-data",
    "postStartCommand": "/var/www/html/.devcontainer/bootstrap.sh",
    "runServices": ["laravel-community", "mysql", "redis"]
}
