{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "jonerickson/laravel-starter-kit",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": ["laravel", "framework"],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "ext-fileinfo": "*",
        "filament/filament": "~4.0",
        "inertiajs/inertia-laravel": "^2.0",
        "laravel/cashier": "^15.7",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.0",
        "laravel/scout": "^10.17",
        "laravel/socialite": "^5.21",
        "laravel/tinker": "^2.10.1",
        "laravel/workos": "^0.1.0",
        "phiki/phiki": "^1.1",
        "spatie/laravel-activitylog": "^4.10",
        "spatie/laravel-permission": "^6.21",
        "tightenco/ziggy": "^2.4"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.5",
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.6",
        "laravel/boost": "^1.0",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^v1.24.0",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-arch": "^3.1",
        "pestphp/pest-plugin-laravel": "^3.2",
        "rector/rector": "^2.1"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://spark.laravel.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "install-hooks": [
            ".githooks/install.sh"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -k -c \"#2563eb,#d4d4d8,#4f46e5\" \"php artisan horizon\" \"php artisan pail\" \"npm run dev\" --names=queue,logs,vite"
        ],
        "dev:ssr": [
            "npm run build:ssr",
            "@dev"
        ],
        "analyze": "vendor/bin/phpstan analyse --memory-limit=2G -v",
        "cs-fix": "vendor/bin/pint --parallel",
        "docs:models": [
            "@php artisan ide-helper:models -nRW",
            "@cs-fix app/Models"
        ],
        "ide": [
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta",
            "@php artisan ide-helper:models -nRW",
            "@cs-fix app/Models"
        ],
        "lint": "@cs-fix",
        "rector": "./vendor/bin/rector process --ansi",
        "reset": [
            "@composer install --no-interaction --no-progress",
            "npm ci --no-audit --no-fund",
            "npm run build",
            "@php artisan migrate:fresh --seed",
            "@php artisan horizon:purge",
            "@php artisan optimize:clear",
            "@ide",
            "@cs-fix"
        ],
        "tc": "@test-coverage",
        "test": "@php artisan test --no-coverage --parallel",
        "test-coverage": "@php artisan test --coverage --parallel",
        "test-filter": "@php artisan test --no-coverage --filter",
        "test-lint": "@cs-fix --test",
        "test-suite": [
            "@analyze",
            "@test"
        ],
        "test-types": "@analyze",
        "test:filter": "@test-filter",
        "test:lint": "@test-lint",
        "test:suite": "@test-suite",
        "test:types": "@analyze",
        "tf": "@test-filter",
        "tl": "@test-lint",
        "ts": "@test-suite",
        "tt": "@test-types"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
